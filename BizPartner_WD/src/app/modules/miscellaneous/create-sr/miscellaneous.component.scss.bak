.w-100 {
  width: 100% !important;
}

:host ::ng-deep .mat-form-field-required-marker {
  color: red !important;
}

.table-styling {
  box-shadow: 0 .125rem .3125rem rgba(0,0,0,.15);
  margin-bottom: 30px;
  display: block !important;
  overflow-x: auto;
}

.errorMessage {
  font-size: 0.7rem;
  color: red;
  margin-bottom: 0.8rem;
  margin-top: -0.4rem;
  padding-left: 0.2rem;
}

.example-radio-group {
  display: flex;
  flex-direction: column;
  margin: 15px 0;
}

.example-radio-button {
  margin: 5px;
}

.example-section {
  margin: 12px 0;
}

.example-margin {
  margin: 0 12px;
}

ul {
  list-style-type: none;
  margin-top: 4px;
}

.myInput {
  height: 50px !important;
  padding: 10px !important;
}

.status-error {
  color:#f44336;
  font-size: 0.77rem;
  margin-bottom: 0.8rem;
  margin-top: -1rem;
  padding-left: 0.2rem;
  font-weight: 600;
}

.status-info{
  color:#72bb53;
  font-size: 1.2rem;
  margin-bottom: 0.8rem;
  margin-top: -1.6rem;
  padding-left: 0.2rem;
  font-weight: 600;
}

.mat-toggle-right {
  margin-right: 10px;
}

.mat-toggle-left {
  margin-left:10px;
}
 
