.whiteBg {
  background: #ffffff !important;
}
.celcomBlueBg {
    background: #20a8e4 !important;
}
.celcomBlueFont {
  color: #20a8e4 !important;
}
.celcomBlueBorder {
  border-color: #20a8e4 !important;
}

.mat-flat-button.mat-celcom-blue {
  background-color: #009BDF;
  color: white;

  &:hover {
    background-color: #0080b9;
  }
}

.mat-flat-button.mat-celcom-white-alternate {
  background-color: white;
  color: #009BDF;
  border: 1px solid #009BDF;

  .icon-logo {
    content: url(../../../../assets/images/logo/attach_icon.svg);
    margin-right: 10%;
  }

  &:hover {
    background-color: rgba(0, 155, 223, 1);
    color: white;

    .icon-logo {
      content: url(../../../../assets/images/logo/attach_icon_white.svg);
    }
  }
}

